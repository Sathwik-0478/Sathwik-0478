#include<stdio.h>
#include<ctype.h>
#include<string.h>
char alphabets(char a[32],int m){
	int i,n=0;
	for(i=0;i<m;i++){
	if(isalpha(a[i])){
		n++;
	}}
	return n;
}
char dig(char a[2],int m){
	int i,n=0;
	for(i=0;i<m;i++){
	if(isdigit(a[i])){
		n++;
	}}
	return n;
}
char sym(char a[2],int m){
	int i,n=0,s=0;
	for(i=0;i<m;i++){
	if(isalnum(a[i])){
	
		n++;}
	}
	return m-n;}

int main(){
	
char a[23];
int m;
puts("enter the string value");
gets(a);
m=strlen(a);
printf("no of alphabets :%d",alphabets(a,m));
printf("\nno of digits :%d",dig(a,m));
printf("\nno of special symbols :%d",sym(a,m));
}               
